{
  "compilerOptions": {
    "target": "es2016",                      
    "module": "commonjs",                    
    "jsx": "react-jsx",                      
    "allowJs": true,                         
    "checkJs": false,                        
    "strict": true,                          
    "noImplicitAny": true,                   
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                     
  },
  "include": ["src"]
}

